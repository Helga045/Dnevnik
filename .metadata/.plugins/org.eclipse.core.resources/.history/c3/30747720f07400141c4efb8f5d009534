import java.util.ArrayList;
import java.util.Date;
import java.util.List;
import java.util.UUID;

class MonthEvent {
	private UUID id;
	List<DayEvent> monthList= new ArrayList<DayEvent>();; 
	
	MonthEvent(){}
	
	public void add(DayEvent dayEvent) {
		monthList.add(dayEvent);
		System.out.println("Добавлена новая запись");
	}
	
	public void remove(DayEvent dayEvent) {
		if(monthList!=null){
		monthList.remove(dayEvent);}
		else {System.out.println("Список пуст! Можешь больше не пытаться удалить запись, которой нет}:->");}
	}
	
	public void update(Event e1, Event e2){
		if(monthList!=null){
		id = e1.getID();
		monthList.remove(e1);
		e2.setID(id);}
		else {System.out.println("Список пуст! Можешь больше не пытаться изменить запись, которой нет}:->");}
	}

//	public void update(DayEvent dayEvent) {
//		if (dayList == null) {
//			dayList = new ArrayList<DayEvent>();
//		}
//		dayList.remove(dayEvent);
//		dayList.add(dayEvent);
//	}
}