import java.util.ArrayList;
import java.util.List;
import java.util.UUID;

class EventList {
	
	private UUID id;
	List<MonthEvent> eventList = new ArrayList<MonthEvent>();; 
	
	EventList(){}
	
	public void add(MonthEvent monthEvent) {
		eventList.add(monthEvent);
		System.out.println("Добавлена новая запись");
	}
	
	public void remove(MonthEvent monthEvent) {
		if(eventList!=null){
		eventList.remove(monthEvent);}
		else {System.out.println("Список пуст! Можешь больше не пытаться удалить запись, которой нет}:->");}
	}

	public void update(Event e1, Event e2){
		if(eventList!=null){
		id = e1.getID();
		eventList.remove(e1);
		e2.setID(id);}
		else {System.out.println("Список пуст! Можешь больше не пытаться изменить запись, которой нет}:->");}
	}
//	public void update(MonthEvent monthEvent) {
//		if (dayList == null) {
//			dayList = new ArrayList<MonthEvent>();
//		}
//		dayList.remove(monthEvent);
//		dayList.add(monthEvent);
//	}
}