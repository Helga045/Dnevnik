import java.lang.*;
import java.util.Scanner;
import java.util.UUID;

class Dnevnic implements Dnevnik {

	private Event e;
	private DayEvent d;
	private MonthEvent m;
	private EventList l;
	private UUID uuid;
	
	public void toWrite(Event event) {
		e=event;
		d.add(e);
		m.add(d);
		l.add(m);
		System.out.println("Вы создали запись в ежедневнике");
	}
//UUID!?
	public void toDelete(Event e) {
		if(id==e.getID()){
		d.remove(e);
		m.remove(d);
		l.remove(m);
		System.out.println("Вы удалили запись из ежедневника");
		}
	}

	public void toUpdate(Event e1, Event e2) {
		e.setID(id);
		uuid=e.getID();
		d.remove(e);
		m.remove(d);
		l.remove(m);
		System.out.println("Вы изменили запись в ежедневнике");
	}

	public void toShowAll() {
		System.out.println("Ваши записи");
	}
	
	public void toShow(Event e){
		System.out.println("Тип:"+e.getEventType()+""+e.get+"");
	}

}