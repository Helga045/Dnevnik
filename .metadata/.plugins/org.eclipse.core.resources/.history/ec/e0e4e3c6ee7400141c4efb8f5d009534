import java.util.ArrayList;
import java.util.Date;
import java.util.List;
import java.util.UUID;

class DayEvent {

	private UUID id;
	List<Event> dayList = new ArrayList<Event>(); 
	
	DayEvent(){}
	
	public void add(Event event) {
		dayList.add(event);
		System.out.println("Добавлена новая запись");
	}

	public void remove(Event event){
		if(dayList!=null){
		dayList.remove(event);}
		else {System.out.println("Список пуст! Можешь больше не пытаться удалить запись, которой нет}:->");}
	}
	
	public void update(Event e1, Event e2){
		if(dayList!=null){
		id = e1.getID();
		dayList.remove(e1);
		e2.setID(id);}
		else {System.out.println("Список пуст! Можешь больше не пытаться изменить запись, которой нет}:->");}
	}
//	public void update(Event e){
